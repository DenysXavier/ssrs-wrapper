<phpunit bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="SSRSWrapper">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-clover" target="logs/clover.xml"/>
    </logging>

    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
</phpunit>
